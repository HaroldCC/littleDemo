{
  "version": "2.0.0",
  "command": "g++",
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "args": [
    "-m32",
    "-g",
    "'${file}'",
    "-o",
    "'${workspaceFolder}/exe/${fileBasenameNoExtension}.exe'"
  ],
  "problemMatcher": {
    "owner": "cpp",
    "fileLocation": [
      "relative",
      "\\"
    ],
    "pattern": {
      "regexp": "^(.*)\\\\(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
      "file": 2,
      "line": 3,
      "column": 4,
      "severity": 5,
      "message": 6
    }
  }
}